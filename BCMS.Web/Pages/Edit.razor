@page "/{id:int}/edit"

<PageTitle>Edit Book</PageTitle>

<h3>Edit Book</h3>

@if (Book == null)
{
    <p>Not found...</p>
}
else
{
    <EditForm Model="@Book" OnValidSubmit="HandleValidSubmit" FormName="EditBook">
        <DataAnnotationsValidator/>
        <ValidationSummary/>

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <InputText id="title" class="form-control" @bind-Value="Book!.Title"/>
        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Author</label>
            <InputText id="author" class="form-control" @bind-Value="Book!.Author"/>
        </div>
        <div class="mb-3">
            <label for="genre" class="form-label">Genre</label>
            <InputText id="genre" class="form-control" @bind-Value="Book!.Genre"/>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-warning" href="/">Return to List</a>
    </EditForm>
}
